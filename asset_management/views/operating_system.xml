<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="operating_system_tree" model="ir.ui.view">
            <field name="name">operating_system_tree</field>
            <field name="model">operating.system</field>
            <field name="arch" type="xml">
                <tree string="Operating System" editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="operating_system_action" model="ir.actions.act_window">
            <field name="name">Operating System</field>
            <field name="res_model">operating.system</field>
            <field name="view_mode">tree</field>
        </record>


    </data>
</odoo>
