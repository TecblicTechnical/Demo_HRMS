<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="device_company_tree" model="ir.ui.view">
            <field name="name">device_company_tree</field>
            <field name="model">device.company</field>
            <field name="arch" type="xml">
                <tree string="Device Company" editable="top">
                    <field name="name"/>
                    <field name="device_code"/>
                </tree>
            </field>
        </record>


        <record id="device_company_action" model="ir.actions.act_window">
            <field name="name">Device Company</field>
            <field name="res_model">device.company</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</odoo>
